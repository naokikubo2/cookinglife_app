<main id="nottop" class="text-center mt-5 pt-5 mb-5 pb-5">
  <div class="jumbotron">
    <div class="container">

      <%= form_with(model: @food_record, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <%= f.label :image, class: 'image' do %>
            <%= f.file_field :image, id: 'food_img', class: 'btn-primary' %>
        <% end %>

        <div class="image-preview">
          <%= image_pack_tag "image_default.png", id: "image_img_prev" %>
        </div>

        <div id="checkfood"></div>

        <%= javascript_pack_tag "tagsinput" %>
        <div class="foodrecord-tags-field mx-auto w-50">
          <%= f.label :tag_list %>
          <%= f.text_field :tag_list, value: @food_record.tag_list.join(','), id: "foodrecord_tags", "data-role": "tagsinput" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "登録する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</main>
