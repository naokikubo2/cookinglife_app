<h1>FoodShares#index</h1>
<p>Find me in app/views/food_shares/index.html.erb</p>

<% if @food_shares.present? %>
  <hr>
  <% @food_shares.each do |food_share| %>
    <div>
      <p>料理名：<%= food_share.food_name %></p>
      <p><%= image_tag food_share.image.url %></p>
      <p>募集人数上限：<%= food_share.limit_number %>人</p>
      <p>募集締め切り：<%= date_format(food_share.limit_time) %></p>
      <p>受け渡し日：<%= date_format(food_share.give_time) %></p>
      <p>メモ：<%= food_share.memo %></p>
      <%= link_to "表示", food_share_path(food_share) %>
      <%= link_to "編集", edit_food_share_path(food_share) %><br/>
      <%= link_to "削除する", food_share_path(food_share), method: :delete %>
    </div>
    <hr>
  <% end %>
<% else %>
  <p>募集中の料理がありません。</p>
<% end %>
