<div id="comments" class="my-3">
  <%= render partial: 'fr_comments/index' %>
</div>

<div class="panel panel-default">
    <div class="panel-body">
      <%= form_for :fr_comment, url: food_record_fr_comments_path(@food_record), remote: true do |f| %>
        <%= f.text_area :content, id: "comments_content", class: 'w-75' %>

        <div class="float-right mx-5">
          <%= f.button :type => "submit", style: 'border-style: none;' do %>
            <i class="fas fa-paper-plane"></i>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
