<div class="container mb-5 pb-5">
  <%= render partial: 'info' %>
  <div class="col-sm-8 col-xs-12">
    <div class = "row">
      <% unless @food_records.present? %>
        <div class ="text-center mt-5 bg-info text-white">
          <div class="h2 col-12">投稿がありません</div>
          <div class="h2 col-12">いますぐ料理を投稿してみましょう</div>
        </div>
      <% else %>
        <div class="col-12 border-bottom pb-2 text-center px-0" id="bg-all">
          <%= render partial: 'recommend_food' %>
        </div>
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">私の料理</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">フォローユーザーの料理</a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab">
            <%= render partial: "tags", locals: { tags: @tags } %>
            <div class="row"><%= render partial: "foods", locals: { food_records: @food_records, loginuser_flag: "true" } %></div>
          </div>
          <div class="tab-pane fade" id="item2" role="tabpanel" aria-labelledby="item2-tab">
            <div class="row"><%= render partial: "following_foods", locals: { food_records: @food_records_followings, loginuser_flag: "false" } %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
