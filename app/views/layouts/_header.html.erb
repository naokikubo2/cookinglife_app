<header>
  <div>
    <nav class="navbar navbar-expand-lg bg-transparent fixed-top">
      <button class="navbar-toggler navbar-toggler" data-toggle="collapse" data-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
        <ul class="navbar navbar-nav bg-white">
          <% if user_signed_in? %>
            <li class="nav-item list-unstyled">
                <%= link_to("ユーザー情報を編集", edit_user_registration_path, class: "nav-link text-info") %>
            </li>
            <li class="nav-item list-unstyled">
                <%= link_to("ログアウト", logout_path,
                data: {confirm: "本当にログアウトしますか？"}, class: "nav-link text-info") %>
            </li>
          <% else %>
            <li class="nav-item list-unstyled">
                <%= link_to("会員登録", signup_path, class: "nav-link text-info") %>
            </li>
            <li class="nav-item list-unstyled">
                <%= link_to("ログイン", login_path, class: "nav-link text-info") %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
