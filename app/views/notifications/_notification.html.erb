<% visiter = notification.visiter %>
<% food_record = notification.food_record %>

<div class="border-bottom mt-3 text-left">
  <% if !@check_ids.nil? && @check_ids.include?(notification.id) %>
    <i class="fa fa-circle text-left" style="color: gold;"></i>
  <% end %>
  <div class="row">
    <div class="col-3">
      <%= render partial: 'shares/user_icon', locals: { user: visiter, id_img: "index_user_img" } %>
    </div>
    <div class="col-6">
      <%= notification_form(notification) %>
    </div>
    <div class="col-3">
      <span class="text-muted"><%= "(#{time_ago_in_words(notification.created_at)} 前)" %></span>
    </div>
  </div>
  <div class="text-muted text-center">
    <%= @comment.content unless @comment.nil? %>
  </div>
</div>






