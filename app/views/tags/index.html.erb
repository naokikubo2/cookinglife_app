<main id="nottop" class="mb-5 pb-5 mt-5">
  <div class="container-fluid">
    <div class="h3 text-center border-bottom"><%= @tag %></div>
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true"><%= current_user.name %>さん</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">フォローユーザー</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab">
        <div class="row"><%= render partial: "food", locals: { food_records: @food_records_mine, loginuser_flag: "true" } %></div>
      </div>
      <div class="tab-pane fade" id="item2" role="tabpanel" aria-labelledby="item2-tab">
        <div class="row"><%= render partial: "food", locals: { food_records: @food_records_others, loginuser_flag: "false" } %></div>
      </div>
    </div>
  </div>
</main>
